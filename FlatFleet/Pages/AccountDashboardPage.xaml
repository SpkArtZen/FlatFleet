<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlatFleet.Pages.AccountDashboardPage"
             Title="Account information"
             Shell.FlyoutBehavior="Disabled">
    <VerticalStackLayout>
        <Image Source="@string/user_icon.png"/>

        <HorizontalStackLayout Padding="0, 30, 0, 20">
            <Label Text="User name: " FontSize="16"/>
            <Label Text="{Binding UserName}" FontSize="16"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout Padding="0, 0, 0, 20">
            <Label Text="User's email: " FontSize="16"/>
            <Label Text="{Binding UserEmail}" FontSize="16"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout Padding="0, 0, 0, 20">
            <Label Text="User's phone: " FontSize="16"/>
            <Label Text="{Binding UserPhone}" FontSize="16"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout Padding="0, 0, 0, 20">
            <Label Text="Account type: " FontSize="16"/>
            <Label Text="{Binding UserAccountType}" FontSize="16"/>
        </HorizontalStackLayout>

        <Button Text="Continue"
                Margin="15, 370, 15, 0"/>
    </VerticalStackLayout>
</ContentPage>