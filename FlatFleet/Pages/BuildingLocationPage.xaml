<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlatFleet.Pages.BuildingLocationPage"
             Title="">
    <VerticalStackLayout>

        <Image 
            Source="@string/select_building_icon.png"
            Margin="0, 150, 0, 20"/>

        <Label 
            Text="Building location"
            FontSize="34"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Margin="0, 0, 0, 10"/>

        <Label 
            Text="Fill in the fields to continue registration"
            FontSize="15"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Margin="0, 0, 0, 10"/>

        <Frame Grid.ColumnSpan="2" BackgroundColor="Transparent" CornerRadius="6" Padding="10" HeightRequest="55" WidthRequest="350" HasShadow="False" Margin="10,10,10,10">
            <Entry
                Grid.Column="1" FontSize="12"
                Margin="0,0,40,0"
                VerticalOptions="Center"
                Placeholder="Your home's location"/>
        </Frame>

        <Button
            BackgroundColor="{StaticResource AddButtonBlue}"
            Margin="20, 10, 20, 0"
            Text="Submit"
            FontSize="16"
            Command="{Binding SubmitCommand}"/>

    </VerticalStackLayout>
</ContentPage>